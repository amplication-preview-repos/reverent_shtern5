datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tweet {
  author    String?
  comments  Int?
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  likes     Int?
  retweets  Int?
  updatedAt DateTime @updatedAt
}

model Like {
  createdAt   DateTime @default(now())
  id          String   @id @default(cuid())
  likedByUser String?
  likedTweet  String?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Comment {
  author         String?
  commentAuthor  String?
  commentContent String?
  content        String?
  createdAt      DateTime @default(now())
  id             String   @id @default(cuid())
  tweetReference String?
  updatedAt      DateTime @updatedAt
}

model User {
  createdAt     DateTime            @default(now())
  email         String?             @unique
  firstName     String?
  id            String              @id @default(cuid())
  lastName      String?
  likes         Like[]
  password      String
  roles         Json
  updatedAt     DateTime            @updatedAt
  userEmail     String?
  userFirstName String?
  userLastName  String?
  userPassword  String?
  userRoles     EnumUserUserRoles[]
  userUsername  String?
  username      String              @unique
}

enum EnumUserUserRoles {
  Option1
}
